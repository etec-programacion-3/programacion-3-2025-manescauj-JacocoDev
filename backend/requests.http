# ==========================================================
# GRUPOS MUSCULARES
# ==========================================================

### GET: listar todos los grupos musculares
GET http://127.0.0.1:8000/grupos-musculares
Accept: application/json


### POST: crear un nuevo grupo muscular
POST http://127.0.0.1:8000/grupos-musulares
Content-Type: application/json

{
  "nombre": "Espalda"
}


### PUT: actualizar grupo muscular
PUT http://127.0.0.1:8000/grupos-musculares/2
Content-Type: application/json

{
  "nombre": "Dorsales"
}


### DELETE: eliminar grupo muscular
DELETE http://127.0.0.1:8000/grupos-musculares/3
Accept: application/json



# ==========================================================
# EJERCICIOS
# ==========================================================

### GET: listar todos los ejercicios
GET http://127.0.0.1:8000/ejercicios
Accept: application/json


### GET: filtrar ejercicios por grupo muscular
GET http://127.0.0.1:8000/ejercicios?grupo_muscular_id=1
Accept: application/json


### POST: crear un ejercicio (usa un grupo muscular existente)
POST http://127.0.0.1:8000/ejercicios
Content-Type: application/json

{
  "nombre": "Dominadas",
  "musculo_enfocado": "Espalda y bíceps",
  "grupo_muscular_id": 1
}


### PUT: actualizar un ejercicio
PUT http://127.0.0.1:8000/ejercicios/2
Content-Type: application/json

{
  "nombre": "Dominadas Supinas",
  "musculo_enfocado": "Variante enfocada en bíceps y dorsal ancho",
  "grupo_muscular_id": 2
}


### DELETE: eliminar un ejercicio
DELETE http://127.0.0.1:8000/ejercicios/3
Accept: application/json



# ==========================================================
# SESIONES DE ENTRENAMIENTO
# ==========================================================

### GET: listar todas las sesiones
GET http://127.0.0.1:8000/sesiones
Accept: application/json


### GET: detalle de una sesión específica
GET http://127.0.0.1:8000/sesiones/1
Accept: application/json


### POST: crear una nueva sesión
POST http://127.0.0.1:8000/sesiones
Content-Type: application/json

{
  "fecha": "2025-10-29",
  "notas": "Sesión de espalda y bíceps",
  "grupo_ids": [1, 2]
}


### PUT: actualizar una sesión existente
PUT http://127.0.0.1:8000/sesiones/2
Content-Type: application/json

{
  "fecha": "2025-10-30",
  "notas": "Actualización: sesión más completa con tríceps",
  "grupo_ids": [1, 2, 3]
}


### DELETE: eliminar una sesión
DELETE http://127.0.0.1:8000/sesiones/3
Accept: application/json



# ==========================================================
# EJERCICIOS POR SESION
# ==========================================================

### GET: listar ejercicios disponibles para la sesión (filtrados por grupos musculares de la sesión)
GET http://127.0.0.1:8000/sesiones/1/ejercicios
Accept: application/json


# ==========================================================
# SERIES
# ==========================================================

### GET: listar series de una sesión
GET http://127.0.0.1:8000/sesiones/1/series
Accept: application/json


### POST: crear una serie en la sesión (usa ejercicio existente)
POST http://127.0.0.1:8000/sesiones/1/series
Content-Type: application/json

{
  "ejercicio_id": 1,
  "repeticiones": 8,
  "peso": 60.0
}


### PUT: actualizar una serie existente
PUT http://127.0.0.1:8000/series/2
Content-Type: application/json

{
  "ejercicio_id": 2,
  "repeticiones": 10,
  "peso": 62.5
}


### DELETE: eliminar una serie
DELETE http://127.0.0.1:8000/series/3
Accept: application/json